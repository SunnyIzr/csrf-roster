<div class='right-align'>
  <% unless user_signed_in? %>
    <%= link_to('Login', new_user_session_path, class: "waves-effect waves-light btn")  %>
  <% end %>
</div>

<% if user_signed_in? %>
<div class='left-align'>
  <div class="card-panel teal lighten-2">Welcome Admin User! <%= link_to('Logout', destroy_user_session_path, :method => :delete) %></div>
</div>
<% end %>

<h2>Student Roster</h2>

<table>
  <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Grade</th>
        <% if user_signed_in? %>
        <th><th>
        <% end %>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
    <tr>
      <td><%= student.id %></td>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.phone %></td>
      <td><%= student.email %></td>
      <td><%= student.average %>%</td>
      <% if user_signed_in? %>
      <td><%= link_to('Edit', edit_student_path(student) , class: "waves-effect waves-light btn")  %></td>    
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
